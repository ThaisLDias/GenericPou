<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thaisdias.jamvpoupou.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Water"
        android:id="@+id/water"
        android:onClick="giveWater"
        android:maxWidth="150dp"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/normal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Food"
        android:id="@+id/food"
        android:onClick="giveFood"
        android:maxWidth="150dp"
        android:layout_alignBaseline="@+id/water"
        android:layout_alignBottom="@+id/water"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />


    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_above="@id/water"
        android:id="@+id/wt"
        android:text="132"
        android:layout_marginLeft="75dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_above="@id/food"
        android:id="@+id/ft"
        android:text="132"
        android:layout_marginLeft="255dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revive"
        android:id="@+id/revive"
        android:onClick="revivePou"
        android:maxWidth="150dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>
